# ======================================================
# Variáveis de Ambiente para OpenContact API
# ======================================================

# Credenciais do Banco de Dados PostgreSQL
POSTGRES_USER=opencontact
POSTGRES_PASSWORD=opencontact
POSTGRES_DB=opencontact

# --- Configuração da Aplicação Spring ---
# URL de conexão (usa o nome do serviço 'db' como host)
SPRING_DATASOURCE_URL="jdbc:postgresql://db:5432/${POSTGRES_DB}"
SPRING_DATASOURCE_USERNAME="${POSTGRES_USER}"
SPRING_DATASOURCE_PASSWORD="${POSTGRES_PASSWORD}"

# Configuração do JPA/Hibernate
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true

# Contexto do Liquibase (para rodar o seed de dados em dev)
SPRING_LIQUIBASE_CONTEXTS=dev